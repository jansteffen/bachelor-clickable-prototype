---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<section class="details-grouping">
	<h3>{title}<slot name="image" /></h3>
	<slot />
</section>

<style>
	.details-grouping {
		display: flex;
		flex-direction: column;
		gap: 8px;
		border: 1px solid var(--borders);
		border-radius: 5px;
		padding: 10px;
		justify-content: stretch;
	}

	.details-grouping h3 {
		font-size: 16px;
		font-weight: normal;
		padding-bottom: 5px;
		border-bottom: 1px solid var(--borders);
		display: flex;
		flex-direction: row;
		justify-content: space-between;
	}

	.details-grouping :global(.details-element.row > *) {
		width: 50%;
	}
</style>
