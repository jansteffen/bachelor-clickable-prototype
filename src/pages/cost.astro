---
import LayoutDetails from "../layouts/LayoutDetails.astro";
import DetailsElement from "../components/detailsElement.astro";
---
<LayoutDetails title="Austausch Klimaanlage" active="4">
	<div class="tab-content">
		<section class="main-content">
			<DetailsElement title="Eingaben">
				<table>
					<thead>
						<tr>
							<th></th>
							<th>Wahrscheinlichster Fall</th>
							<th>Best case</th>
							<th>Worst case</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>Investition (€)</td>
							<td><input type="text" value="23000" placeholder="-" /></td>
							<td><input type="text" placeholder="-" /></td>
							<td><input type="text" placeholder="-" /></td>
						</tr>
						<tr>
							<td>Kalkulatorischer Zinssatz (%)</td>
							<td><input type="text" placeholder="-" value="5,5"/></td>
							<td><input type="text" placeholder="-" /></td>
							<td><input type="text" placeholder="-" /></td>
						</tr>
						<tr>
							<td>Nutzungsdauer (Jahre)</td>
							<td><input type="text" placeholder="-" value="8"/></td>
							<td><input type="text" placeholder="-" /></td>
							<td><input type="text" placeholder="-" /></td>
						</tr>
					</tbody>
				</table>
			</DetailsElement>
			
